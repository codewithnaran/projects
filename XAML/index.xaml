<Window x:Class="CalculatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Calculator" Height="200" Width="300">
    <Grid>
    <TextBox x:Name="Number1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
    <TextBox x:Name="Number2" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Width="120"/>
    <Button Content="Calculate" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="100" Click="CalculateSum"/>
    <TextBlock x:Name="Result" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="260" Height="30"/>
    </Grid>
</Window>